<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp"
    android:id="@+id/layoutRelatedFile"
    android:scrollbars="horizontal">

    <ImageView
        android:id="@+id/imageFileRelated"
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/nameFileRelated"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginLeft="8dp"
            android:text="text messages are used for personal, family, business and social purposes"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nameChannelRelated"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:text="owais hamouda"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/viewAndDateFileRelated"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:text="354K  view . 2 weeks ago"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/related_menu"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />


</LinearLayout>